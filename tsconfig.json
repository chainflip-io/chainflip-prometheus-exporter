{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "config/schema.json"],
  "exclude": ["node_modules"]
}
